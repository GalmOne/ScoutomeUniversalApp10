<Page
    x:Class="Scoutome.InformationsReunionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Scoutome"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Source={StaticResource Locator}, Path=InformationsReunionPage}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="image/boisblanc.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='1' x:Name="Retour" Command="{Binding BackCommand}" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" RequestedTheme="Light" Margin="10,10,0,0" Grid.Row="0">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="image/back.png"/>
            </Button.Background>
        </Button>
        <Image x:ConnectionId='2' x:Name="imageDate" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" Grid.Row="1"  VerticalAlignment="Top" Width="40" Source="image/date.png"/>
        <Image x:ConnectionId='3' x:Name="imagePlace" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" Grid.Row="2"  VerticalAlignment="Top" Width="40" Source="image/place.png"/>
        <Image x:ConnectionId='4' x:Name="imagePrice" HorizontalAlignment="Center" Height="40" Margin="10,10,0,0" Grid.Row="2"  VerticalAlignment="Top" Width="40" Source="image/price.png"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock" Text="{Binding Libelle, Mode=TwoWay}" HorizontalAlignment="Left" Margin="80,10,0,0" Grid.Row="0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="29.333" FontWeight="Bold" FontFamily="Segoe UI Black" Foreground="#FF223938"/>
        <TextBlock x:ConnectionId='6' x:Name="dateText" Text="{Binding Date, Mode=TwoWay}" HorizontalAlignment="Left" Margin="80,10,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="29.333" FontWeight="Bold" FontFamily="Segoe UI Black" Foreground="#FF223938"/>
        <TextBlock x:ConnectionId='7' x:Name="placeText" Text="{Binding Lieu, Mode=TwoWay}" HorizontalAlignment="Left" Margin="80,10,0,0" Grid.Row="2" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="29.333" FontWeight="Bold" FontFamily="Segoe UI Black" Foreground="#FF223938"/>
        <TextBlock x:ConnectionId='8' x:Name="priceText" Text="{Binding Prix, Mode=TwoWay}" HorizontalAlignment="Center" Margin="100,15,0,0" Grid.Row="2" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="29.333" FontWeight="Bold" FontFamily="Segoe UI Black" Foreground="#FF223938"/>
        <ListView x:ConnectionId='9' x:Name="listView" ItemsSource="{ Binding ChildrenPresents, Mode=TwoWay}" HorizontalAlignment="Left" Height="364" Margin="0,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="360" Grid.RowSpan="2">
            <ListView.Background>
                <ImageBrush Stretch="Fill"/>
            </ListView.Background>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding nom}" />
                        <TextBlock Text="{Binding prenom}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock x:Uid="EnfantPrésent" Text="" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="3"  TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="26" Foreground="#FF223938" />
        <TextBlock x:ConnectionId='10' x:Name="textBlock1" HorizontalAlignment="Center" Margin="160,12,0,0" Grid.Row="2"  TextWrapping="Wrap" Text="€" VerticalAlignment="Top" FontSize="26.667" Foreground="#FF223938" FontWeight="Bold"/>

    </Grid>
</Page>

